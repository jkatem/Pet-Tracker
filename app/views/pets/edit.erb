<h1>Edit your <%= @pet.pet_name %> here.</h1>
<form method ='POST' action='/pets/<%= @pet.id %>'>

  <input type='hidden' name="_method" value='patch'>

  <label>Name</label>
  <input type='text' name='pet_name' placeholder="Name" value="<%= @pet.pet_name %>" ><br/><br>
    
  <label>Birthday</label>
  <input type='text' name='pet_birthday' placeholder="Birthday" value="<%= @pet.pet_birthday %>" ><br/><br>
  
  <label>Weight</label>
  <input type='text' name='pet_weight' placeholder="Weight" value="<%= @pet.pet_weight %>" ><br/><br/>
  
  <label>Category</label>
  <input type='text' name='category' placeholder="Category" value="<%= @pet.category %>" ><br/><br/>
  
  <label>Description</label>
  <input type='text' name='pet_description' placeholder="Description" value="<%= @pet.pet_description %>" ><br/><br/>

  <input type="submit" class="submit_button" value="Submit">
</form>
