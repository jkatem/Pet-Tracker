
<h1><%= @user.name %>'s Pets</h1><br>

<ul> 
    <% if @pets.empty? %>
        <h3>Click below to add your first pet:</h3>
        <br>
        <a href='/pets/new' class="myButton">Click to get started</a>
        <br>
    <% else %>
    
        <% @pets.each.with_index do |p, idx| %>
            <li> Name: <%= p.pet_name %> </li> 
            <li> Birthday: <%= p.pet_birthday %> </li> 
            <li> Weight: <%= p.pet_weight  %> </li>
            <li> Description: <%= p.pet_description %></li> 
            <li> Category: <%= p.category %></li> 
        <br>
            <a href="/pets/<%=p.id%>/edit">Edit</a><br/>
            <br>
            <form action="/pets/<%=p.id%>" method="POST">
            <input type="hidden" name="_method" id="hidden" value="DELETE"> 
            <input type='submit' class="delete_button" value= 'Delete Pet'> 
            <br>
            </form> 
       <% end %>
    <% end %>
</ul>





    

  
    
